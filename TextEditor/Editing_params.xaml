<Window x:Class="WpfApp1.Editing_params"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Text editing parameters" Height="354" Width="428">
    <WrapPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Height="130" Width="127">
                <TextBlock
                 Height="24"
           Width="90"
            Text="Font family"
            TextWrapping="Wrap" />

                <ComboBox
            x:Name="Font_Family_ComboBox"
           
            local:ComboBoxBehavior.SingleClickSelection="True"
            DisplayMemberPath="Source"
            IsEditable="True"
            ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}"
            SelectedItem="{Binding ElementName=File_contents, Path=FontFamily}"
            SelectionChanged="ComboBox_SelectionChanged_1" Height="82"  />
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock
                 Height="24"
           Width="90"
            Text="Style"
            TextWrapping="Wrap" />

                <CheckBox
            x:Name="italicCheckBox"
            Checked="CheckBox_Checked"
            Content="italic"
            Unchecked="CheckBox_Unchecked" />
                <CheckBox
            x:Name="boldCheckBox"
            Checked="CheckBox_Checked"
            Content="bold"
            Unchecked="CheckBox_Unchecked" />
                <CheckBox
            x:Name="underlinedCheckBox"
            Checked="CheckBox_Checked"
            Content="underline"
            Unchecked="CheckBox_Unchecked" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock
                 Height="24"
           Width="90"
            Text="Size"
            TextWrapping="Wrap" />
                <ComboBox
            x:Name="sizeComboBox"
            local:ComboBoxBehavior.SingleClickSelection="True"
            IsEditable="True"
            ItemsSource="{Binding fontSizes}"
            SelectedIndex=" 0"
            SelectionChanged="FontSizeComboBox_SelectionChanged" Height="74" />
            </StackPanel>
            <StackPanel>
                <TextBlock
            Height="24"
           Width="90"
            Text="Color"
            TextWrapping="Wrap" />


                <ListBox
            x:Name="ColorListBox"
            SelectedIndex="7"
            SelectionChanged="ComboBox_SelectionChanged" Height="73" Width="92">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="{Binding}" Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Vertical">
            <TextBlock
                 Height="24"
           Width="90"
            Text="SAMPLE"
            TextWrapping="Wrap" />
            <TextBlock
                Name="Sample_text"
                 Height="121"
           Width="390"
                FontFamily="{Binding ElementName=Font_Family_ComboBox, Path=SelectedItem}"
            Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            TextWrapping="Wrap" />
        </StackPanel>
    </WrapPanel>
</Window>
